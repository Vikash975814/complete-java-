import java.util.*;

public class Base {
    public static void main(String s[]) {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter the number ");
        int num = sc.nextInt();
        int i = 0, sum = 0;
        while (i <= num) {
            System.out.println(i);
            sum = sum + i;
            i++;
        }
        System.out.println("Sum is:" + sum);
    }
}
